<div id="welcome">
  <%= image_tag @random,
        width: 1440,
        style: "opacity: 0.8",
        id: "background-image"
  %>
  <div id="logo">Petssup</div>
  <div class="main-msg">Site Name Here is a social network for your pets. At Site Name Here, pets freely voice themselves on stuff they love, including food, humans, and other pets! If your pet is not yet a member, please sign up and not leave your pet behind in the latest trend!</div>
</div>

<%= render "shared/new_session" %>
<%= render "shared/new_user" %>

<div id="home-content">
  <div class="column" id="newsfeed">
    <div class ="accent" id="newsfeed-heading">
      The latest pet news @ the Guardian
    </div>
    <% @news.each do |news| %>
    <article>
      <%= link_to news['webTitle'], news['webUrl'], class: "news-title" %>
      &nbsp;&nbsp;
      <span id="news-date"><%= news['webPublicationDate'] %></span>
    </article>
    <% end %>
  </div>

  <div class="column">
  </div>

</div>
