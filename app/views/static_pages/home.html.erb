<div id="welcome">
  <%= image_tag @random,
        width: 1440,
        style: "opacity: 0.8",
        id: "background-image"
  %>
  <div id="logo">Petssup</div>
  <div class="main-msg">Petssup is the social network for pets by pets. At Petssup, your pets voice themselves freely on stuff they love, including food, humans, and other pets! If your pet is not yet a part of this latest trend, please let them borrow your email and sign up so that they don't feel left behind!</div>
</div>

<%= render "shared/new_session" %>
<%= render "shared/new_user" %>

<div id="home-content">
  <div class="column" id="newsfeed">
    <div class ="accent" id="newsfeed-heading">
      Pet News from the Guardian
    </div>
    <% @news.each do |news| %>
    <article>
      <%= link_to news['webTitle'], news['webUrl'], class: "news-title" %>
      &nbsp;&nbsp;
      <span id="news-date"><%= news['webPublicationDate'] %></span>
    </article>
    <% end %>
  </div>

  <div class="column">
  </div>

</div>
