<div id="edit-profile">

  <%= form_for(@user) do |f| %>

  <div class="pf-row">
      <div>Confirm Password</div>
      <div><%= f.text_field :password, class: 'form-control' %></div>
  </div>
  <div class="pf-row">
      <div>Name</div>
      <div><%= f.text_field :name, class: 'form-control' %></div>
  </div>
  <div class="pf-row">
      <div>Animal Type</div>
      <div><%= f.text_field :animal_type, class: 'form-control' %></div>
  </div>
  <div class="pf-row">
      <div>Gender</div>
      <div><%= f.text_field :gender, class: 'form-control' %></div>
  </div>
  <div class="pf-row">
      <div>Birthday</div>
      <div><%= f.text_field :birthday, class: 'form-control' %></div>
  </div>
  <div class="pf-row">
      <div>Human Family Name</div>
      <div><%= f.text_field :family_name, class: 'form-control' %></div>
  </div>
  <div class="pf-row">
      <div>Human Family Address</div>
      <div><%= f.text_field :address, class: 'form-control' %></div>
  </div>
  <div class="pf-row">
      <div>Human Name</div>
      <div><%= f.text_field :human_name, class: 'form-control' %></div>
  </div>
  <div class="pf-row">
      <div>Email</div>
      <div><%= f.text_field :email, class: 'form-control' %></div>
  </div>
  <div class="pf-row">
      <div>Hobby</div>
      <div><%= f.text_field :hobby, class: 'form-control' %></div>
  </div>
  <div class="pf-row">
      <div>Favorite Food</div>
      <div><%= f.text_field :fav_food, class: 'form-control' %></div>
  </div>
  <div class="pf-row">
      <div>Profile Image Url</div>
      <div><%= f.text_field :profile_img, class: 'form-control' %></div>
  </div>
  <div>
    <%= f.submit "Save Changes", class: "btn btn-default", id: "profile-btn"%>
  </div>

  <% end %>

</div>
