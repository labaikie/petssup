<div id ="joinDp">
  <div id="screen">
    <div class="message">

    <%= form_for @user do |f| %>

      <% flash.each do |key,value| %>
      <div class="<%=key %>" > <%= value %> </div>
      <% end %>

      <div class="form-group">
        <div><%= f.label :email %></div>
        <div><%= f.email_field :email, class: "form-field" %></div>
      </div>

      <div class="form-group">
        <div><%=f.label :password %></div>
        <div><%=f.password_field :password, class: "form-field" %></div>
      </div>

      <div class="form-group">
        <div><%=f.label :name %></div>
        <div><%=f.text_field :name, class: "form-field" %></div>
      </div>

      <div class="form-group">
        <div><%= f.label :password_confirmation, "Confirm Password" %></div>
        <div><%= f.password_field :password_confirmation, class: "form-field" %></div>
      </div>

      <%= f.submit "Sign-up", class: "btn btn-success"  %>

    <% end %>
      <div class="btn btn-default">
        <%= link_to "Already a Member? Log-in", new_session_path %>
      </div>
    </div>
  </div>
</div>
