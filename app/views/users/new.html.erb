<div>
<%= form_for @user do |f| %>

<% flash.each do |key,value| %>
  <div class="<%=key %>" > <%= value %> </div>
<% end %>

  <%= f.label :email %>
  <br>
  <%= f.email_field :email %>
  <br>

  <%=f.label :password %>
  <br>
  <%=f.password_field :password %>
  <br>

  <%= f.label :password_confirmation, "Confirmation" %>
  <br>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit "Sign-up" %>

<% end %>
</div>
