<div id ="loginDp">
  <div class="screen">
    <div class="message">

    <%= form_for @user, url: create_session_path do |f| %>

      <% flash.each do |key,value| %>
        <div class="<%=key %>" > <%= value %> </div>
      <% end %>

        <div class="form-group">
          <div><%= f.label :email %></div>
          <div><%= f.email_field :email, class: "form-field" %></div>
        </div>

        <div class="form-group">
          <div><%= f.label :password %></div>
          <div><%= f.password_field :password, class: "form-field" %></div>
        </div>

        <%= f.submit "Log In" %>
        <%= link_to "Not a Member? Join Us!", new_user_path %>

    <% end %>

    </div>
  </div>
</div>
