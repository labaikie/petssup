<!DOCTYPE html>
<html>

<head>
  <title>La's Project-2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Pacifico|Rokkitt:400,700|Swanky+and+Moo+Moo|Laila:400,500' rel='stylesheet' type='text/css'>
</head>

<body>

  <header>
      <% if current_user %>
    <div>
      <%= link_to "Sign Out", destroy_session_path %>
    </div>
    <div>
      <%= link_to "View My Petfile", user_path(current_user) %>
    </div>
      <% flash.each do |key, value| %>
      <div class="<%= key %>"><%= value %></div>
      <% end %>
      <% else %>
    <div id="join">
      Join Us
      <%= link_to "Join Us", new_user_path %>
    </div>
    <div>
      Sign In
      <%= link_to "Sign In", new_session_path %>
    </div>
      <% end %>
  </header>

  <%= yield %>

  <footer>
    <div>Site Name Here</div>
    <div>Copyright La 2016</div>
  </footer>

</body>

</html>
