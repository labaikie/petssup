<header>
  <div id="menu"><i class="fa fa-bars"></i></div>

  <div id="toggle">


  <% if current_user %>

    <div id = "signout" class="accent">
      <%= link_to "Sign Out", destroy_session_path %>
    </div>
    <div>
      <%= link_to "My Petfile", user_path(current_user) %>
    </div>
    <div>
      <%= link_to "Main", users_path(current_user) %>
    </div>


  <% else %>

    <div id="login">Log In</div>
    <div id="join">Join</div>

  <% end %>

    <div><%= link_to "Home", root_path %></div>

  </div>

    <% flash.each do |key, value| %>
    <div class="<%= key %>"><%= value %></div>
    <% end %>

</header>
