<div id ="postDp">
  <div class="screen">
    <div class="message">

    <%= form_for @post do |f| %>

      <% flash.each do |key,value| %>
      <div class="<%=key %>" > <%= value %> </div>
      <% end %>

      <div class="form-group">
        <div><%= f.label "Post" %></div>
        <div><%= f.text_field :body, class: "form-field" %></div>
      </div>

      <div class="form-group">
        <div><%=f.label "Image" %></div>
        <div><%=f.text_field :img_url, class: "form-field" %></div>
      </div>

      <div class="form-group">
        <div><%=f.label "Video" %></div>
        <div><%=f.text_field :video_url, class: "form-field" %></div>
      </div>

      <div class="form-group">
        <div><%= f.label "Created By" %></div>
        <div><%= f.text_field :user_id, class: "form-field" %></div>
      </div>

      <%= f.submit "Post", class: "btn btn-success" %>

    <% end %>
      <div class="btn btn-default">
        <%= link_to "Back to Posts", posts_path %>
      </div>
    </div>
  </div>
</div>
