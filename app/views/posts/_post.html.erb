<div class="post">
    <div class="post-header">
      <%= image_tag post.user.profile_img,
        class: 'img-circle user-icon' %>
      <span class="post-user">
        <%= link_to post.user.name, users_path(post.user) %> of the <%= post.user.family_name %> family
      </span>
      <span class="post-time">
        Posted <%= time_ago_in_words(post.created_at) %> ago
      </span>
    </div>
    <div class="post-body"><%= post.body %></div>
    <div class="post-image"><%= image_tag post.img_url,
                            class: "img-rounded",
                            width: 435 %>
    </div>
    <div class="buttons">
      <div class="btn btn-default"><%= link_to 'Edit', edit_post_path %></div>
      <div class="btn btn-danger">Delete</div>
    </div>
</div>
