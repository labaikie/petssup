<div class="post">
    <div class="post-header">
      <span class="post-time">
        Posted <%= time_ago_in_words(post.created_at) %> ago
      </span>
      <%= image_tag post.user.profile_img,
        class: 'img-circle user-icon' %>
      <span class="post-user">
        <%= link_to post.user.name, users_path(post.user) %> of the <%= post.user.family_name %> family
      </span>
    </div>
    <div class="post-body"><%= post.body %></div>
    <% if post.img_url? %>
    <%= image_tag post.img_url,
        class: "img-rounded post-image"
    %>
    <% end %>
    <% if post.video_url? %>
    <%= video_tag post.video_url,
        class: "post-video"
    %>
    <% end %>
    <% if current_user == post.user %>
    <div class="buttons">
      <div class="btn btn-default">
        <%= link_to 'Edit', edit_post_path(post.id) %>
      </div>
      <div class="btn btn-danger">
        <%= link_to "Delete", post, method: :delete,
            data: { confirm: "You sure?" } %>
      </div>
    </div>
    <% end %>
</div>
