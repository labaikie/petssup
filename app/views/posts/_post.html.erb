<div class="post">
    <div class="post-header">
      <span class="post-time">
        Posted <%= time_ago_in_words(post.created_at) %> ago
      </span>
      <%= image_tag post.user.profile_img,
        class: 'img-circle user-icon' %>
      <span class="post-user">
        <%= link_to post.user.name, users_path(post.user) %> of the <%= post.user.family_name %> family
      </span>
    </div>
    <div class="post-body"><%= post.body %></div>
    <% if post.img_url? %>
    <%= image_tag post.img_url,
        class: "img-rounded post-image"
    %>
    <% end %>
    <% if post.video_url? %>
    <%= video_tag post.video_url,
        class: "post-video"
    %>
    <% end %>
    <div class="buttons">
      <div class="btn btn-default", id="comments-btn">
        Comments
      </div>
    <% if current_user == post.user %>
      <div class="btn btn-default">
        <%= link_to 'Edit', edit_post_path(post.id) %>
      </div>
      <div class="btn btn-danger">
        <%= link_to "Delete", post, method: :delete,
            data: { confirm: "You sure?" } %>
      </div>
    <% end %>
    </div>
    <div class="comments">
      <div class="show-comments">
      <% post.comments.each do |comment| %>
        <div class="comment">
          <div><%= comment.user.name %></div>
          <div><%= comment.body %></div>
          <span id="delete-comment"><%= link_to "Delete", "posts/#{post.id}/comments/#{comment.id}", method: :delete %></span>
          <span id="edit-comment">Edit</span>
        </div>
      <% end %>
      </div>
      <div class="add-comment">
        <%= form_for Comment.new, :url => post_comments_path(post) do |f| %>
        <%= f.text_field :body, :placeholder => "Comment Here", class: "form-field" %>
        <%= f.submit "Comment", class: "btn btn-success", id: "new-post-btn" %>
        <% end %>
      </div>
    </div>
</div>
