<div class="sound">

  <div class="show-sound">
    <span class="btn btn-default btn-xs play" >
      <%= sound.sound_type %>♪
      <%= audio_tag sound.sound_url, id: sound.id, class: "audio-play" %>
    </span>
    <% if current_user == sound.user %>
    <span id="delete-sound">
      <%= link_to "✖", sound, method: :delete,
                  data: { confirm: "You sure?" } %>
    </span>
    <% end %>
  </div>

</div>
